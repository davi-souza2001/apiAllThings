generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email       String  @unique
  name        String
  imageUser   String?
  description String?

  Page Page[]
  @@map("users")
}

model Page {
  id String @id @default(uuid())

  name      String
  levelType String
  idUser    String

  user User @relation(fields: [idUser], references: [id])

  Note Note[]
  @@map("pages")
}

model Note {
  id String @id @default(uuid())

  title   String
  content String
  type    String
  idPage  String

  page Page @relation(fields: [idPage], references: [id])

  @@map("notes")
}

model Feedback {
  id Int @id @default(autoincrement())

  type       String
  comment    String
  screenshot String?

  @@map("feedbacks")
}
